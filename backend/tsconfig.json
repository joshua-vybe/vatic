{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./core-service/src/*"],
      "@market-data/*": ["./market-data-service/src/*"],
      "@monte-carlo/*": ["./monte-carlo-service/src/*"],
      "@websocket/*": ["./websocket-service/src/*"],
      "@report/*": ["./report-service/src/*"]
    }
  },
  "include": ["*/src/**/*.ts"],
  "exclude": ["node_modules", "*/dist", "*/tests"]
}
