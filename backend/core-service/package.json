{
  "name": "core-service",
  "version": "1.0.0",
  "description": "Core service for Vatic Prop",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:pull": "prisma db pull",
    "test:unit:cancellation": "bun test ../tests/unit/event-cancellation.test.ts",
    "test:integration:cancellation": "bun test ../tests/integration/event-cancellation.test.ts"
  },
  "dependencies": {
    "elysia": "latest",
    "@elysiajs/cors": "latest",
    "@prisma/client": "^5.7.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.1.2",
    "stripe": "^14.8.0",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.3.2",
    "@aws-sdk/client-secrets-manager": "^3.445.0",
    "ms": "^2.1.3",
    "uuid": "^9.0.1",
    "prom-client": "^15.1.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-jaeger": "^1.18.0",
    "winston": "^3.14.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ms": "^0.7.34",
    "typescript": "^5.3.0",
    "prisma": "^5.7.0"
  }
}
